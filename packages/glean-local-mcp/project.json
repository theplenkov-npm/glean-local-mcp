{
  "name": "glean-local-mcp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/glean-local-mcp/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "inputs": [
        "default",
        "{projectRoot}/tsdown.config.ts",
        "{projectRoot}/tsconfig.json"
      ],
      "cache": true,
      "options": {
        "command": "tsdown",
        "cwd": "{projectRoot}"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/index.js",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/index.js",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "auth": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/cli/authenticate.js",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "watch": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "{projectRoot}/tsdown.config.ts",
        "{projectRoot}/tsconfig.json"
      ],
      "cache": false,
      "options": {
        "command": "tsdown --watch",
        "cwd": "{projectRoot}"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "cache": false,
      "options": {
        "command": "rm -rf dist",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "{projectRoot}/tsconfig.json"
      ],
      "cache": true,
      "options": {
        "command": "node --test src/**/*.test.ts",
        "cwd": "{projectRoot}"
      }
    }
  }
}

